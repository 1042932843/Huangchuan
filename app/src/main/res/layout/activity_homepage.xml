<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shouye"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout style="@style/Header">

        <TextView
            android:id="@+id/back"
            style="@style/HeaderBack" />

        <TextView
            android:id="@+id/navbar_title"
            style="@style/HeaderTitle"
            android:layout_width="210dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="首页" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/homepage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/listItemPressed"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:layout_above="@+id/test_layout"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    style="@style/HomeRelativeLayout"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:id="@+id/djbo"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/aii"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/travel"
                        style="@style/HomeTextItem1"
                        android:drawableTop="@drawable/icon_djbb"
                        android:text="党建播报" />


                </RelativeLayout>

                <RelativeLayout
                    style="@style/HomeRelativeLayout"
                    android:layout_marginLeft="1px"
                    android:layout_marginRight="1px">

                    <ImageView
                        android:id="@+id/yxqcyx"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/aii"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/hui_pu_jin_rong"
                        style="@style/HomeTextItem1"
                        android:drawableTop="@drawable/yxqcyx"
                        android:text="严乡强村育新" />

                </RelativeLayout>

                <RelativeLayout style="@style/HomeRelativeLayout">

                    <ImageView
                        android:id="@+id/xxsjd"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/aii"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/sjd"
                        style="@style/HomeTextItem1"
                        android:drawableTop="@drawable/xxsjd"
                        android:text="学习十九大" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    style="@style/HomeRelativeLayout"
                    >

                    <ImageView
                        android:id="@+id/djcyliv"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/aii"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/djcyltv"
                        style="@style/HomeTextItem1"
                        android:drawableTop="@drawable/icon_dj_cyl"
                        android:text="党建+产业链" />

                </RelativeLayout>

                <RelativeLayout
                    style="@style/HomeRelativeLayout"
                    android:layout_marginLeft="1px"
                    android:layout_marginRight="1px">

                    <ImageView
                        android:id="@+id/wsyzz"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/aii"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/flood_information"
                        style="@style/HomeTextItem1"
                        android:drawableTop="@drawable/icon_wsyzb"
                        android:text="网上e支部" />


                </RelativeLayout>

                <RelativeLayout style="@style/HomeRelativeLayout">

                    <ImageView
                        android:id="@+id/djcfp"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/aii"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/notice_of_program"
                        style="@style/HomeTextItem1"
                        android:drawableTop="@drawable/icon_djcfb"
                        android:text="党建促扶贫" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <RelativeLayout
                    style="@style/HomeRelativeLayout"
                  >

                    <ImageView
                        android:id="@+id/lddyzc"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/aii"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/social_service"
                        style="@style/HomeTextItem1"
                        android:drawableTop="@drawable/iconlddyzj"
                        android:text="流动党员之窗" />

                </RelativeLayout>

                <RelativeLayout
                    style="@style/HomeRelativeLayout"
                    android:layout_marginLeft="1px"
                    android:layout_marginRight="1px">

                    <ImageView
                        android:id="@+id/dwzs"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/aii"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/huimin_subsidies"
                        style="@style/HomeTextItem1"

                        android:drawableTop="@drawable/icon_dwzs"
                        android:text="党务助手" />

                </RelativeLayout>


                <!--<TextView-->
                <!--android:layout_marginBottom="1px"-->
                <!--android:id="@+id/dwjyz"-->
                <!--style="@style/HomeTextItem"-->
                <!--android:layout_height="match_parent"-->
                <!--android:drawableTop="@drawable/icon_dyjyz"-->
                <!--android:text="党员加油站" />-->
                <RelativeLayout style="@style/HomeRelativeLayout">

                    <ImageView
                        android:id="@+id/lxyz"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/aii"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/pests"
                        style="@style/HomeTextItem1"
                        android:drawableTop="@drawable/icon_lxyz"
                        android:text="两学一做" />
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_96"
            android:background="@color/colorPrimary"
            android:id="@+id/test_layout">

            <TextView
                android:id="@+id/testeveryday"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/icon_test"
                android:gravity="center"
                android:text="点击进入每日一测"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                 />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>