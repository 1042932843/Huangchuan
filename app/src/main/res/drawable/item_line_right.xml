<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
        android:drawable="@drawable/gray"/>
    <item android:drawable="@drawable/white"/>

    <item>
        <layer-list >
            <item>
                <shape>
                    <solid android:color="@color/colorE" />
                </shape>
            </item>
            <item android:right="1dp" android:bottom="@dimen/padding_1dp">
                <shape>
                    <solid android:color="#FFFFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list >
            <item>
                <shape>
                    <solid android:color="@color/colorE" />
                </shape>
            </item>
            <item android:right="1dp" android:bottom="@dimen/padding_1dp">
                <shape>
                    <solid android:color="@color/listItemPressed" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
